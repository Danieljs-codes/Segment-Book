{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~ui/*": ["./src/components/ui/*"],
      "~components/*": ["./src/components/*"],
      "~lib/*": ["./src/lib/*"],
      "~/*": ["./src/*"]
    }
  }
}
